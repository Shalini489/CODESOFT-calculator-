# In[2]:


# **************** build a simple calculator in python ************
# 1. ADD
# 2.SUBTRACT
# 3.MULTIPLY
# 4.DIVIDE
print("Mini Calculator")
a = int(input('please enter the first number:'))
b = int(input('please enter the second number:'))
print('thank you so much for entering two numbers:')

print("press 1 for addition \npress 2 for subtraction\npress3 for multiplication \npress4 for division")



# In[4]:


choice = int(input("enter your choice from 1-4:"))

if choice ==1:
    print(a + b)
elif choice ==2:
    print(a - b)
elif choice ==3:
    print(a * b)
elif choice ==4:
    print(a / b)
else:
    print("Invalid input")


